<script type="text/javascript">
    $(document).ready(function () {
      $.fn.editableform.buttons =
  '<button type="submit" class="btn btn-primary btn-sm editable-submit">'+
    '<i class="fa fa-fw fa-check"></i>'+
  '</button>'+
  '<button type="button" class="btn btn-default btn-sm editable-cancel">'+
    '<i class="fa fa-fw fa-times"></i>'+
  '</button>';
        $('table').DataTable({"order": [[ 1, "asc" ]],
            "paging": false,
            "initComplete": function(settings, json) {
                $('.updatetopic').editable({tpl: '<textarea maxlength="10000"></textarea>', success: function(response, newValue) {

                    }});
            }});

        //Handler to add a new topic
        $('#addnewtopic').on('click', function () {
            var topic_name = $('#newtopicnameinput').val();
            var topic_order = $('#newtopicnoinput').val();
            var topic_course_id = $('#newtopiccourseid').val();
            var topic_module_id = $('#newtopicmoduleid').val();
            if(topic_name.trim()!=='' && topic_order.trim()!==''){
                $.ajax({
                    type: "POST",
                    url: '/courses/topics',
                    data: {
                        topic_name: topic_name,
                        topic_order: topic_order,
                        course_id: topic_course_id,
                        module_id: topic_module_id
                    },
                    success: function(result){
                        location.reload();
                    }
                });
            }
            else{
                alert('Kindly fill all inputs');
            }
        });

        //Handler to navigate to the topic's elements
        $('.topic_elements').on('click', function () {
            var topicid = $(this).data('topicid');
            var courseid = $('.mainContent').data('courseid');
            var moduleid = $('.mainContent').data('moduleid');
            window.location = '/courses/elements/'+courseid+'/'+moduleid+'/'+topicid+'/manage';
        });

        $('.removetopic').on('click', function (e) {
            e.preventDefault();
            var topic_id = $(this).data('topic_id');
            $.confirm({
                title: 'Confirm!',
                content: 'Are you sure you want to delete the topic?',
                buttons: {
                    confirm: function () {
                        $.ajax({
                            type: "DELETE",
                            url: '/courses/topics/removetopic',
                            data: {
                                topic_id: topic_id
                            },
                            success: function(result){
                                $.alert('Topic Removed Successfully!');
                                location.reload();
                            }
                        });
                    },
                    cancel: function () {

                    },
                }
            });
        });
    });
</script>
